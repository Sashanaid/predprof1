import csv

def promo_gen(product, Date):
    promo=product[:2]+Date[:2]+product[-1]+product[-2]+Date[4]+Date[3]
    return promo

s=0
with open('products.csv', encoding='utf8') as file:
    reader=csv.reader(file, delimiter=';')
    d=[]
    for Category, product, Date, Price, Count in reader:
        if Category != 'Category':
            d.append([Category, product, Date, Price, Count, promo_gen(product, Date)])

with open('product_promo.csv', 'w', encoding='utf8') as file :
    writer=csv.writer(file, delimiter=';')
    writer.writerow(['Category','product','Date','Price per unit','Count','Promo'])
    writer.writerows(d)
