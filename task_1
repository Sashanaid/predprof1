import csv

s=0
with open('products.csv', encoding='utf8') as file:
    reader=csv.reader(file, delimiter=';')
    d=[]
    for Category, product, Date, Price, Count in reader:
        if Category != 'Category':
            d.append([Category, product, Date, Price, Count, int(float(Price)*float(Count))])
            if Category == 'Закуски':
                s=s+float(Price)*float(Count)
    print(int(s))

with open('product_new.csv', 'w', encoding='utf8') as file :
    writer=csv.writer(file, delimiter=';')
    writer.writerow(['Category','product','Date','Price per unit','Count','Total'])
    writer.writerows(d)

